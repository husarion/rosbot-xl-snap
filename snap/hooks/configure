#!/bin/sh -e

# Make sure parameter value is a boolean
MECANUM="$(snapctl get mecanum)"
if [ -n "${MECANUM}" ]; then
  case "${MECANUM}" in
    "true") ;;
    "false") ;;
    "0") ;;
    "1") ;;
    *)
    	>&2 echo "'${MECANUM}' is not a supported value for 'mecanum'." \
        "Possible values are true, false, 0, 1"
    	return 1
    	;;
  esac
fi

# Make sure parameter value is a boolean
CAMERA_MOUNT="$(snapctl get include-camera-mount)"
if [ -n "${CAMERA_MOUNT}" ]; then
  case "${CAMERA_MOUNT}" in
    "true") ;;
    "false") ;;
    "0") ;;
    "1") ;;
    *)
    	>&2 echo "'${CAMERA_MOUNT}' is not a supported value for 'include-camera-mount'." \
        "Possible values are true, false, 0, 1"
    	return 1
    	;;
  esac
fi
